{
  "name": "UniFi Network MCP Server",
  "description": "Run UniFi Network MCP Server to expose UniFi controller tools via MCP protocol",
  "version": "0.2.0",
  "slug": "unifi_network_mcp",
  "init": false,
  "arch": [
    "aarch64",
    "amd64"
  ],
  "ports": {
    "3000/tcp": 3000
  },
  "map": [],
  "options": {
    "host": {
      "title": "UniFi Controller Host",
      "default": "192.168.1.1"
    },
    "username": {
      "title": "Controller Username",
      "default": "admin"
    },
    "password": {
      "title": "Controller Password",
      "type": "password",
      "secret": true
    },
    "port": {
      "title": "Controller Port",
      "default": 443
    },
    "site": {
      "title": "UniFi Site",
      "default": "default"
    },
    "verify_ssl": {
      "title": "Verify SSL Certificate",
      "type": "boolean",
      "default": false
    },
    "controller_type": {
      "title": "Controller Type",
      "description": "auto-detect, proxy (UniFi OS), or direct (standalone)",
      "enum": ["auto", "proxy", "direct"],
      "default": "auto"
    },
    "http_enabled": {
      "title": "Enable HTTP Server (Optional)",
      "description": "Enable HTTP SSE endpoint. Only enable behind secure reverse proxy.",
      "type": "boolean",
      "default": false
    },
    "auto_confirm": {
      "title": "Auto-Confirm Mutating Operations",
      "description": "Skip confirmation prompts. Recommended only for automation workflows.",
      "type": "boolean",
      "default": false
    },
    "tool_registration_mode": {
      "title": "Tool Registration Mode",
      "description": "lazy (recommended, minimal tokens), eager (all tools), or meta_only (manual discovery)",
      "enum": ["lazy", "eager", "meta_only"],
      "default": "lazy"
    },
    "enabled_categories": {
      "title": "Enabled Tool Categories",
      "description": "Comma-separated list of categories to load (e.g., clients,devices,stats)"
    },
    "enabled_tools": {
      "title": "Enabled Tools",
      "description": "Comma-separated list of specific tools to register"
    },
    "allowed_hosts": {
      "title": "Allowed Hosts for HTTP",
      "description": "Comma-separated hostnames allowed to connect via HTTP. Required for reverse proxy.",
      "default": "localhost,127.0.0.1"
    },
    "permissions": {
      "title": "Tool Permissions",
      "description": "Enable/disable permissions for mutating operations. Default: Read-only only.",
      "properties": {
        "clients": {
          "title": "Client Operations",
          "description": "Block, unblock, rename, authorize guests, reconnect, IP settings",
          "properties": {
            "create": {
              "title": "Create Clients",
              "description": "Create new client entries",
              "default": false
            },
            "delete": {
              "title": "Delete Clients",
              "description": "Remove client entries",
              "default": false
            },
            "update": {
              "title": "Update Clients",
              "description": "Modify client settings",
              "default": false
            },
            "reconnect": {
              "title": "Force Reconnect",
              "description": "Force client to reconnect to network",
              "default": false
            }
          }
        },
        "devices": {
          "title": "Device Operations",
          "description": "Adopt, reboot, rename, upgrade devices",
          "properties": {
            "adopt": {
              "title": "Adopt Device",
              "description": "Adopt unadopted devices into controller",
              "default": false
            },
            "reboot": {
              "title": "Reboot Device",
              "description": "Restart a device",
              "default": false
            },
            "upgrade": {
              "title": "Upgrade Firmware",
              "description": "Upgrade device firmware",
              "default": false
            },
            "rename": {
              "title": "Rename Device",
              "description": "Change device name",
              "default": false
            }
          }
        },
        "firewalls": {
          "title": "Firewall Operations",
          "description": "Create, update, delete firewall rules and groups",
          "properties": {
            "create": {
              "title": "Create Firewall Rules",
              "description": "Add new firewall policies",
              "default": false
            },
            "delete": {
              "title": "Delete Firewall Rules",
              "description": "Remove firewall policies",
              "default": false
            },
            "update": {
              "title": "Update Firewall Rules",
              "description": "Modify existing firewall settings",
              "default": false
            }
          }
        },
        "hotspots": {
          "title": "Hotspot / Voucher Operations",
          "description": "Create, update, delete vouchers and hotspots",
          "properties": {
            "create": {
              "title": "Create Vouchers",
              "description": "Generate access vouchers for guest network",
              "default": false
            },
            "delete": {
              "title": "Delete Vouchers/Hotspots",
              "description": "Remove vouchers or hotspots",
              "default": false
            },
            "update": {
              "title": "Update Hotspot Settings",
              "description": "Modify hotspot configuration",
              "default": false
            }
          }
        },
        "networks": {
          "title": "Network Operations",
          "description": "Create, update, delete network configurations",
          "properties": {
            "create": {
              "title": "Create Networks",
              "description": "Add new network/VLAN configurations",
              "default": false
            },
            "delete": {
              "title": "Delete Networks",
              "description": "Remove network configurations",
              "default": false
            },
            "update": {
              "title": "Update Networks",
              "description": "Modify network settings",
              "default": false
            }
          }
        },
        "port_forwards": {
          "title": "Port Forwarding Operations",
          "description": "Create, update, delete port forward rules",
          "properties": {
            "create": {
              "title": "Create Port Forwards",
              "description": "Add new port forwarding rules",
              "default": false
            },
            "delete": {
              "title": "Delete Port Forwards",
              "description": "Remove port forwarding rules",
              "default": false
            },
            "update": {
              "title": "Update Port Forwards",
              "description": "Modify port forwarding settings",
              "default": false
            }
          }
        },
        "qos": {
          "title": "QoS / Traffic Shaping",
          "description": "Create, update, delete QoS rules",
          "properties": {
            "create": {
              "title": "Create QoS Rules",
              "description": "Add traffic shaping rules",
              "default": false
            },
            "delete": {
              "title": "Delete QoS Rules",
              "description": "Remove QoS rules",
              "default": false
            },
            "update": {
              "title": "Update QoS Rules",
              "description": "Modify QoS settings",
              "default": false
            }
          }
        },
        "routes": {
          "title": "Static Routes",
          "description": "Create, update, delete routing rules",
          "properties": {
            "create": {
              "title": "Create Routes",
              "description": "Add static routes",
              "default": false
            },
            "delete": {
              "title": "Delete Routes",
              "description": "Remove static routes",
              "default": false
            },
            "update": {
              "title": "Update Routes",
              "description": "Modify route settings",
              "default": false
            }
          }
        },
        "traffic_routes": {
          "title": "Policy-Based Routing",
          "description": "Create, update, delete traffic route policies",
          "properties": {
            "create": {
              "title": "Create Traffic Routes",
              "description": "Add policy-based routing rules",
              "default": false
            },
            "delete": {
              "title": "Delete Traffic Routes",
              "description": "Remove traffic route policies",
              "default": false
            },
            "update": {
              "title": "Update Traffic Routes",
              "description": "Modify traffic route settings",
              "default": false
            }
          }
        },
        "usergroups": {
          "title": "User Groups / Bandwidth Profiles",
          "description": "Create, update, delete user group profiles",
          "properties": {
            "create": {
              "title": "Create User Groups",
              "description": "Add bandwidth limit profiles",
              "default": false
            },
            "delete": {
              "title": "Delete User Groups",
              "description": "Remove user group profiles",
              "default": false
            },
            "update": {
              "title": "Update User Groups",
              "description": "Modify user group settings",
              "default": false
            }
          }
        },
        "vpns": {
          "title": "VPN Operations",
          "description": "Create, update, delete VPN servers and clients",
          "properties": {
            "create": {
              "title": "Create VPN",
              "description": "Add new VPN server or client",
              "default": false
            },
            "delete": {
              "title": "Delete VPN",
              "description": "Remove VPN configurations",
              "default": false
            },
            "update": {
              "title": "Update VPN",
              "description": "Modify VPN settings",
              "default": false
            }
          }
        },
        "wlans": {
          "title": "Wireless Networks",
          "description": "Create, update, delete WLAN (WiFi) configurations",
          "properties": {
            "create": {
              "title": "Create WLANs",
              "description": "Add new wireless networks",
              "default": false
            },
            "delete": {
              "title": "Delete WLANs",
              "description": "Remove wireless networks",
              "default": false
            },
            "update": {
              "title": "Update WLANs",
              "description": "Modify wireless network settings",
              "default": false
            }
          }
        }
      }
    }
  }
}
